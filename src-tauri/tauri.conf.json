{
  "package": {
    "productName": "Stacks",
    "version": "0.6.1"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/cablehead/stacks/main/.tauri-updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE0ODk5RTFDQ0Q5MDlFOEQKUldTTm5wRE5ISjZKcEp4RHRJS3hHNkdmcGVDdnBjeUhOaXczdWt1UEo5cDFERElnajlsZDJLSW4K"
    },
    "systemTray": {
      "iconPath": "icons/system-tray-icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "window": {
        "hide": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "externalBin": ["bin/x-macos-pasteboard"],
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "stream.cross.stacks",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "title": "stacks",
        "width": 970,
        "height": 500
      }
    ]
  }
}
